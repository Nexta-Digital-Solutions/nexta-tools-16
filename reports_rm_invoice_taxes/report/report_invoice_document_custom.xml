<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="report_invoice_document_custom" inherit_id="account.report_invoice_document">

     <xpath expr="//div[@name='no_shipping']//div[@t-if='o.partner_id.vat']" position="inside">
         <div t-if="o.partner_id.mobile">
            <i class="fa fa-phone"/>
            <span t-field="o.partner_id.mobile"/>
        </div>
        <div t-if="o.partner_id.email">
            <i class="fa fa-envelope"/>
            <span t-field="o.partner_id.email"/>
        </div>
    </xpath>

    <xpath expr="//div[@name='address_not_same_as_shipping']//div[@t-if='o.partner_id.vat']" position="inside">
        <div t-if="o.partner_id.mobile">
            <i class="fa fa-phone"/>
            <span t-field="o.partner_id.mobile"/>
        </div>
        <div t-if="o.partner_id.email">
            <i class="fa fa-envelope"/>
            <span t-field="o.partner_id.email"/>
        </div>
    </xpath>


    <xpath expr="//div[@name='address_same_as_shipping']//div[@t-if='o.partner_id.vat']" position="inside">
        <div t-if="o.partner_id.mobile">
          <i class="fa fa-phone"/>
          <span t-field="o.partner_id.mobile"/>
        </div>
        <div t-if="o.partner_id.email">
          <i class="fa fa-envelope"/>
          <span t-field="o.partner_id.email"/>
        </div>
    </xpath>

<!--    Esto quita los impuestos-->
    <xpath expr="//th[@name='th_taxes']" position="attributes">
        <attribute name="t-if">1!=1</attribute>
    </xpath>

    <xpath expr="//td[5]" position="attributes">
        <attribute name="t-if">1!=1</attribute>
    </xpath>

</template>
</odoo>