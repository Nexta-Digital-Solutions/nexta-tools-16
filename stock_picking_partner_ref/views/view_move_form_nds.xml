<odoo>
    <!-- Inherit Form View to Modify it -->
    <record id="view_move_form_nds" model="ir.ui.view">
        <field name="name">view.move.form.nds</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_shipping_id']" position="after">
                <field name="partner_ref" help="Esta referencia pertenece al albarán de compra, es por eso que su valor solo está visible el campo cuando el albarán proviene de una compra"
                       readonly="True"/>
            </xpath>
        </field>
    </record>
</odoo>