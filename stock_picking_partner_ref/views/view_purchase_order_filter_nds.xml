<odoo>
    <!-- Inherit Form View to Modify it -->
    <record id="view_purchase_order_filter_nds" model="ir.ui.view">
        <field name="name">view.purchase.order.filter.nds</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.view_purchase_order_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="partner_ref" string="Referencia de proveedor" filter_domain="[('partner_ref', 'ilike', self)]"/>
            </xpath>
        </field>
    </record>
</odoo>